---
import '../styles/global.css';
import leavesWind from '../assets/leaves-wind.mp4';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Romeo Popescu | Fullstack Developer</title>
    <link rel="icon" href="/rupiah.png" type="image/png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Saira:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="font-sans bg-black text-zinc-200 overflow-x-hidden">
    <!-- Background video -->
    <video
      autoplay
      muted
      loop
      playsinline
      class="fixed top-0 left-0 w-full h-full object-cover -z-10"
    >
      <source src={leavesWind} type="video/mp4" />
    </video>
    <div class="fixed inset-0 bg-black/50 -z-5 backdrop-blur-[1px]"></div>

    <!-- Main container -->
    <main class="relative z-10 max-w-5xl mx-auto px-6 sm:px-8">
      <!-- HERO -->
      <section class="h-screen flex flex-col justify-center items-center text-center space-y-4">
        <h1 class="text-5xl sm:text-6xl font-bold tracking-tight text-white">
          Romeo Popescu
        </h1>
        <p class="text-xl text-zinc-300">Fullstack Developer</p>

        <div class="flex gap-5 mt-6">
          <a href="https://github.com/romeopopescu" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform">
            <img src="/github.svg" alt="GitHub" class="w-8 h-8 invert opacity-90" />
          </a>
          <a href="https://linkedin.com/in/romeopopescu" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform">
            <img src="/linkedin.svg" alt="LinkedIn" class="w-8 h-8 invert opacity-90" />
          </a>
          <a href="/resume.pdf" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform">
            <img src="/file-user.svg" alt="Resume" class="w-8 h-8 invert opacity-90" />
          </a>
        </div>
      </section>

      <!-- ABOUT -->
      <section class="bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl shadow-lg p-8 text-center">
        <h2 class="text-3xl font-semibold mb-4 text-emerald-300">About Me</h2>
        <p class="text-zinc-300 leading-relaxed max-w-2xl mx-auto">
          I’m a fullstack developer passionate about creating functional, elegant web apps.
          I focus on clarity, performance, and minimalism — both in code and design.
        </p>
      </section>

      <!-- PROJECTS -->
      <section class="mt-16">
        <h2 class="text-3xl font-semibold text-center text-emerald-300 mb-8">My Work</h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {Array.from({ length: 6 }).map(() => (
            <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-xl shadow-lg p-6 transition-all duration-300 hover:bg-white/20 hover:scale-[1.02]">
              <h3 class="text-xl font-semibold mb-2 text-white">Project Name</h3>
              <p class="text-zinc-300 text-sm">Short description of what it does and what tech stack you used.</p>
            </div>
          ))}
        </div>
      </section>

      <!-- CONTACT -->
      <section class="my-20 text-center">
        <h2 class="text-3xl font-semibold text-emerald-300 mb-4">Get in Touch</h2>
        <p class="text-zinc-300 mb-6">Let’s collaborate or talk about your next idea.</p>
        <a href="mailto:romeopopescu@example.com"
           class="px-6 py-3 bg-emerald-600 rounded-lg text-white font-medium hover:bg-emerald-700 transition">
          Contact Me
        </a>
      </section>
    </main>
  </body>
</html>
