
<section id="jungle" class="relative h-screen w-full overflow-hidden bg-emerald-900">
  <!-- Leaf layers -->
  <img src="/leaf-1.svg" class="layer absolute top-10 left-6 w-1/3 transform-gpu pointer-events-none" data-depth="0.05" />
  <img src="/leaf-2.svg" class="layer absolute bottom-12 right-10 w-1/4 transform-gpu pointer-events-none" data-depth="0.12" />

  <!-- Foreground text -->
  <div class="absolute inset-0 z-10 flex items-center justify-center text-center text-white">
    <h1 class="text-5xl font-extrabold">Hello, Iâ€™m Romeo</h1>
    <p class="mt-4 text-xl opacity-80">Fullstack Developer</p>
  </div>

  <script>
    const container = document.getElementById("jungle");
    const layers = container.querySelectorAll(".layer");
    let mouse = {x: 0, y: 0}, pos = {x: 0, y: 0};

    function lerp(a, b, n) { return (1 - n) * a + n * b; }

    container.addEventListener("mousemove", e => {
      const rect = container.getBoundingClientRect();
      mouse.x = (e.clientX - rect.width/2) / rect.width;
      mouse.y = (e.clientY - rect.height/2) / rect.height;
    });

    function animate() {
      pos.x = lerp(pos.x, mouse.x, 0.08);
      pos.y = lerp(pos.y, mouse.y, 0.08);

      layers.forEach(layer => {
        const depth = parseFloat(layer.dataset.depth) || 0;
        layer.style.transform = `translate3d(${pos.x * depth * 120}px, ${pos.y * depth * 120}px, 0)`;
      });

      requestAnimationFrame(animate);
    }
    animate();
  </script>
</section>
